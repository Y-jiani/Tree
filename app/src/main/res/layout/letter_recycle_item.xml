<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/letter_recycle_item"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginHorizontal="20dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/letter_recycle_item_shape_corner">

    <ImageView
        android:id="@+id/letter_item_iv_calender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/letter_icon_calendar"/>
    <TextView
        android:id="@+id/letter_tv_letterDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:text="日期"
        android:textColor="@color/letter_date_gray"
        android:layout_toRightOf="@id/letter_item_iv_calender"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/letter_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="@string/letter_title"
        android:textColor="@color/testrecord_font_brown"
        android:layout_below="@id/letter_tv_letterDate"
        android:layout_alignLeft="@id/letter_item_iv_calender"
        android:layout_marginTop="10dp"/>

</RelativeLayout>