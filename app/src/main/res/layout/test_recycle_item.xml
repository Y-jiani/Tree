<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/test_recycle_item"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/test_recycle_item_shape_corner">
    <ImageView
        android:id="@+id/test_recycle_item_iv"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:layout_marginVertical="20dp"
        android:background="@drawable/test_item_pic1"/>
    <TextView
        android:id="@+id/test_item_tv_testName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/test_recycle_item_iv"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="@string/test_tv_name1"
        android:textColor="@color/testrecord_font_brown"/>

    <Button
        android:id="@+id/test_item_btn_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:text="@string/test_btn_go"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:background="@drawable/test_fragment_btn_shape_corner"/>

</RelativeLayout>