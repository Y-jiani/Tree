<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/testrecord_recycle_item"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginHorizontal="20dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/testrecord_recycle_item_shape_corner">

    <TextView
        android:id="@+id/testrecord_item_tv_testDatetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:text="日期"
        android:textColor="@color/testrecord_font_brown"/>
    <TextView
        android:id="@+id/testrecord_item_tv_testType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="24dp"
        android:layout_alignBottom="@id/testrecord_item_tv_testDatetime"
        android:text="测试类型"
        android:textSize="16sp"
        android:textColor="@color/testrecord_font_brown" />

    <LinearLayout
        android:id="@+id/testrecord_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_below="@id/testrecord_item_tv_testDatetime"
        android:gravity="center_vertical">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/testrecord_item_iv_testscore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/testrecord_icon_score" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="@string/testrecord_score"
                android:textColor="@color/testrecord_font_brown"/>

        </LinearLayout>

        <TextView
            android:id="@+id/testrecord_item_tv_testscore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/testrecord_font_brown"
            android:text="100分"
            android:layout_weight="2"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/testrecord_item_im_testresult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/testrecord_icon_testresult" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="@string/testrecord_result"
                android:textColor="@color/testrecord_font_brown"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/testrecord_item_iv_testresultIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/testrecord_testresult_happy" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"/>

    </LinearLayout>

</RelativeLayout>
